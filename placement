                                                program to print number from 1 to 100 without using loop
#include<stdio.h>
int main()
{
    static int i=1;
    if(i<=100)
    {
    printf("%d ",i++);
    main();
}
}

                                                          program to print anything without using main
#include<stdio.h>
#define x main
void x()
{
    printf("hello world");
}



