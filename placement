                                           Program to add two numbers without using addition operator
 
 #include <stdio.h>
int add(int x, int y)
{
	return printf("%*c%*c", x, ' ', y, ' ');
}
int main()
{
	printf("Sum = %d", add(3, 4));
	return 0;
}



                                        program to subtract two numbers without using subtraction operator 
                                      program to multiply two numbers without using multiplication operator
#include <stdio.h>
int main()
{
    int a,b;
    int mul=0; 
    printf("enter the two numbers\n");
    scanf("%d%d",&a,&b);
    while(b)
    {
        mul=mul+a;
        b--;
    }
    printf("mul=%d",mul);
    return 0;
}
				      
				      
				  
                                            program to divide two numbers without using division operator 

                                                program to print number from 1 to 100 without using loop
#include<stdio.h>
int main()
{
    static int i=1;
    if(i<=100)
    {
    printf("%d ",i++);
    main();
}
}

                                                          program to print anything without using main
#include<stdio.h>
#define x main
void x()
{
    printf("hello world");
}



                                                    program to sort the left side of array list till the last


#include <stdio.h>
void main()
{
    int a[10];
    int n=10;
    int t,i,j;
    printf("enetr the array\n");
    for(i=0;i<n;i++)
    scanf("%d ",&a[i]);
    printf("array before sorting\n");
    for(i=0;i<n;i++)
    printf("%d ",a[i]);
    for(i=0;i<n;i++)
    {
        for(j=i+1;j<n/2;j++)
        if(a[i]>a[j]){
            t=a[i];
            a[i]=a[j];
            a[j]=t;
        }
    }
    printf("array after sorting\n");
    for(i=0;i<n;i++)
    printf("%d ",a[i]);
    return 0;
    
    
}
